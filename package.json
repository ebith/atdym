{
  "name": "atdym",
  "version": "1.2.0",
  "license": "MIT",
  "author": "ebith <ebith.h@gmail.com>",
  "main": "src/server.tsx",
  "scripts": {
    "build": "esbuild --bundle src/client.tsx --outfile=public/client.js --minify --target=ios15 && postcss ./src/input.css -o ./public/style.css",
    "deploy": "pnpm build && NO_D1_WARNING=true wrangler deploy",
    "dev": "pnpm dev-css & pnpm dev-js",
    "dev-js": "esbuild --bundle src/client.tsx --outfile=public/client.js && NO_D1_WARNING=true wrangler dev src/server.tsx --local",
    "dev-css": "tailwindcss -i src/input.css -o public/style.css --watch",
    "bookmarklet": "esbuild --bundle bookmarklet.js --banner:js=javascript: --charset=utf8 --format=iife --minify"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.5",
    "hono": "^4.11.7",
    "html-entities": "^2.6.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "uuid": "^13.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@cloudflare/d1": "^1.4.1",
    "@cloudflare/workers-types": "^3.18.0",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "autoprefixer": "^10.4.13",
    "cssnano": "^5.1.14",
    "daisyui": "^2.41.0",
    "esbuild": "^0.25.0",
    "postcss-cli": "^10.0.0",
    "postcss-nested": "^6.0.0",
    "tailwindcss": "^3.2.4",
    "wrangler": "^4.59.1"
  }
}
